@model GoTravelApplication.Model.AdminResponse

@{
    ViewData["Title"] = "AdminRepond";
}

<h1>Create Admin Response</h1>

<h4>AdminResponse</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAdminResponse">
            <input type="hidden" value="@ViewData["loggedAdminId"]" class="form-control" name="id" />
            <input type="hidden" value="@ViewData["requestId"]" class="form-control" name="requestId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ResponseTime" value="@DateTime.Now" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ModeratorId" value="@ViewData["modId"]" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="AdminId" value="@ViewData["loggedAdminId"]" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
