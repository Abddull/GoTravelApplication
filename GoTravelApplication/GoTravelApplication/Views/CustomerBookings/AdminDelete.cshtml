@model GoTravelApplication.Model.CustomerBooking

@{
    ViewData["Title"] = "AdminDelete";
}

<h1>AdminDelete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CustomerBooking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Password)
        </dd>
    </dl>

    <form asp-action="AdminDeleteConfirmed">
        <input type="hidden" value="@ViewData["loggedAdminId"]" name="id" />
        <input type="hidden" value="@Model.CustomerBookingId" name="bookingId" />
        <input type="submit" value="Cancel Booking" class="btn btn-danger" />
    </form>

    <form asp-action="AdminDetails" class="text-danger">
        <input type="hidden" value="@ViewData["loggedAdminId"]" name="id" />
        <input type="hidden" value="@Model.CustomerBookingId" name="bookingId" />
        <div class="form-group">
            <input type="submit" value="Back to Details" class="btn btn-secondary" />
        </div>
    </form>
</div>
