@model GoTravelApplication.Model.CustomerBooking

@{
    ViewData["Title"] = "AdminCreate";
}

<h1>AdminCreate</h1>

<h4>CustomerBooking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DoAdminCreate">
            <input type="hidden" value="@ViewData["loggedAdminId"]" name="id" />
            <input type="hidden" value="@ViewData["custId"]" name="custId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="PurchaseDate" value="@DateTime.Now.ToString()" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Status" value="Unused" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BookingId" class="control-label"></label>
                <select asp-for="BookingId" class="form-control" asp-items="ViewBag.BookingId"></select>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CustomerId" value="@ViewData["custId"]" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <form asp-action="BackToAdmin" class="text-danger">
        <input type="hidden" value="@ViewData["loggedAdminId"]" name="id" />
        <input type="hidden" value="@ViewData["custId"]" name="custId" />

        <div class="form-group">
            <input type="submit" value="Back to Customer Details" class="btn btn-secondary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
