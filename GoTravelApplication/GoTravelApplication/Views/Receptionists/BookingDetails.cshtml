@model GoTravelApplication.Model.CustomerBooking

@{
    ViewData["Title"] = "ReservationDetails";
}

<h1>ReservationDetails</h1>

<div>
    <h4>CustomerBooking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerId)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="EditBooking" class="text-danger">
        <input type="hidden" value="@ViewData["loggedReceptionistId"]" name="id" />
        <input type="hidden" value="@Model.CustomerBookingId" name="bookId" />

        <div class="form-group">
            <input type="submit" value="Edit Booking Status" />
        </div>
    </form>
    <a asp-action="ReceptionistHomePage" asp-route-id="@ViewData["loggedReceptionistId"]">Back to Home Page</a>
</div>
