@model IEnumerable<GoTravelApplication.Model.Customer>

@{
    ViewData["Title"] = "AdminSearch";
}

<h1>Search Customers</h1>

<p>
    <a asp-action="AdminBack" asp-route-id="@ViewData["loggedAdminId"]"><div class="btn btn-primary">Back To Home Page</div></a>
</p>
<form asp-action="AdminSearch">
    <input type="hidden" value="@ViewData["loggedAdminId"]" name="id" />
    <div class="form-group">
        <label for="custId" class="control-label">Customer Id</label>
        <input type="number" min="0" id="custId" class="form-control" name="custId" style="color:black" />
    </div>
    <div class="form-group">
        <label for="username" class="control-label">User Name</label>
        <input type="text" id="username" class="form-control" name="username" style="color:black" />
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Sort" />
    </div>
</form>

<h3>All Customers</h3>
<table class="table" >
    <thead >
        <tr>
            <th style="color:ightslategray">
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th style="color:ightslategray">
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th style="color:ightslategray">
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <style>
table {
  border-spacing: 0;
  width: 100%;
  border: 1px solid #ddd;
}

th, td {
  text-align: left;
  padding: 16px;
}

tr{
  background-color: cadetblue
}
</style>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    <form asp-action="AdminDetails" class="text-danger">
                        <input type="hidden" value="@ViewData["loggedAdminId"]" name="id" />
                        <input type="hidden" value="@item.CustomerId" name="custId" />

                        <div class="form-group">
                            <input type="submit" class="btn btn-warning" value="View Details" />
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
