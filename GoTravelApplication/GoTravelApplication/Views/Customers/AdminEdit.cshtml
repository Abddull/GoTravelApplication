@model GoTravelApplication.Model.Customer

@{
    ViewData["Title"] = "AdminEdit";
}

<h1>AdminEdit</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DoEdit">
            <input type="hidden" value = "@ViewData["loggedAdminId"]"name="id"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerId" />
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <form asp-action="AdminDetails" class="text-danger">
        <input type="hidden" value="@ViewData["loggedAdminId"]" name="id" />
        <input type="hidden" value="@Model.CustomerId" name="custId" />

        <div class="form-group">
            <input type="submit" value="Back to Customer Details" class="btn btn-secondary"/>
        </div>
    </form>
    <a asp-action="AdminSearch" asp-route-id="@ViewData["loggedAdminId"]">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
