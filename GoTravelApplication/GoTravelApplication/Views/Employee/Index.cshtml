@{
    ViewData["Title"] = "Employee Login Options";
}

<div class="text-center">
    <h1 class="display-4">Employee Login Options</h1>

    <hr />
    <center>
        <div class="row" style="text-align:center; margin:auto;">
            <div class="col-md-4" style="text-align:match-parent; margin:auto;">
                <div class="form-group">
                    <form asp-action="ReceptionistLogin" class="text-danger">
                        <input type="submit" class="btn btn-warning" value="Receptionist Login" />
                    </form>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <form asp-action="ModLogin" class="text-danger">
                            <input type="submit" class="btn btn-warning" value="Moderator Login" />
                        </form>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <form asp-action="AdminLogin" class="text-danger">
                            <input type="submit" class="btn btn-warning" value="Administrator Login" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
</center>
</div>
